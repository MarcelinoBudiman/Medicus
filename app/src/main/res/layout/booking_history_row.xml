<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="11 November 2022"
                android:layout_marginLeft="100dp"
                android:textColor="#f00d84"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/lblDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="Appointment With :"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/lblDate"
                app:layout_constraintTop_toBottomOf="@+id/lblDate" />

            <TextView
                android:id="@+id/insDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="#f00d84"
                android:text="Dr. Rizaldi"
                app:layout_constraintStart_toEndOf="@+id/lblDoctorName"
                app:layout_constraintTop_toTopOf="@+id/lblDoctorName" />

            <TextView
                android:id="@+id/lblHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:text="Appointment At :"
                app:layout_constraintStart_toStartOf="@+id/lblDate"
                app:layout_constraintTop_toBottomOf="@+id/lblDoctorName" />

            <TextView
                android:id="@+id/insHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="#f00d84"
                android:text="RS Sari Asih"
                app:layout_constraintStart_toEndOf="@+id/lblHospital"
                app:layout_constraintTop_toBottomOf="@+id/lblDoctorName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>